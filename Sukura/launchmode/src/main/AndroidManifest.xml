<?xml version="1.0" encoding="utf-8"?>
<manifest package="jcc.example.com.launchmode"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".JTestActivity1"
            android:launchMode="singleTop"/>
        <activity android:name=".JTestActivity2"
                  android:launchMode="singleTask"/>
        <activity android:name=".JTestActivity3"
                  android:launchMode="singleInstance"/>
        <activity android:name=".JTestActivity4"
                  android:launchMode="singleTask"/>
        <activity android:name=".JTestActivity5"
                  android:launchMode="singleTask"/>
        <activity android:name=".JTestActivity6"
                  android:launchMode="standard"/>
    </application>

</manifest>